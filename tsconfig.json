{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "lib": ["es2017"],
      "strict": true,
      "declaration": true,
      "outDir": "dist",
      "sourceMap": false,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }
